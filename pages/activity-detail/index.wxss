/* pages/activity-detail/index.wxss */
@import '/common/consult/consult.wxss';
@import '/pages/enterprise-detail/index.wxss';
.activity-title {
  width: 690rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #333333;
}

.activity-img {
  width: 690rpx;
  height: 540rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.activity-img image {
  width: 100%;
  height: 100%;
}

.activity-status-going {
  width: 132rpx;
  height: 52rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #3ccbb4;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}

.activity-status-writing {
  width: 132rpx;
  height: 52rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #43b2fc;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}

.activity-status-overed {
  width: 132rpx;
  height: 52rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #c9c9c9;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}
.activity-status-ready{
  width: 132rpx;
  height: 52rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #f52b2b;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}
.activity-wrap{
  width: 100%;
  padding: 0 30rpx;
}
.meeting-introduce{
  width: 690rpx;
  margin-top: 14rpx;
  padding-bottom: 100rpx;
}
.meetting-title{
  font-size: 30rpx;
  color: #333333;
  line-height: 48rpx;
}
.meeting-dec{
  font-size: 26rpx;
  line-height: 48rpx;
  color: #666666;
}

.btn-wrap{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn{
  width: 690rpx;
  height: 90rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: linear-gradient(90deg,#43b2fc 1%, #43a0fc 99%);
  margin: 0;
}