/* pages/authorization/index.wxss */
/* 头部导航栏 */
.head {
  height: 352rpx;
  width: 100%;
  position: relative;
  color: #ffffff;
  font-size: 36rpx;
}

.head-bg {
  width: 100%;
  height: 352rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.nav-bar {
  width: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-bar>van-icon {
  font-size: 44rpx;
  margin-left: 20rpx;
}

.head-title {
  text-align: center;
  padding-right: 40rpx;
}

/* 登录 logo */
.logo-box {
  margin-top: -106rpx;
}

.login-logo {
  width: 212rpx;
  height: 212rpx;
  background: #ffffff;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 5rpx 0rpx #333333;
}

.logo {
  width: 115rpx;
  height: 115rpx;
}

.login-name {
  font-size: 32rpx;
  color: #333333;
  margin-top: 12rpx;
  margin-bottom: 72rpx;
}

/* 授权按钮 */
.btn {
  width: 526rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin: 0 auto;
  background: linear-gradient(86deg, #43b2fc 3%, #43a0fc 97%);
  color: #ffffff;
}