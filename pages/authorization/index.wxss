/* pages/authorization/index.wxss */
/* 头部导航栏 */

/* 登录 logo */
.logo-box {
  width: 100%;
  height: 352rpx;
  position: relative;
}
.logo-box-bg {
  width: 100%;
  height: 100%;
}

.login-logo {
  width: 212rpx;
  height: 212rpx;
  background: #ffffff;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -25%;
  /* overflow: hidden; */
  box-shadow: 0rpx 0rpx 5rpx 0rpx rgba(245,245,245,1);
}

.logo {
  width: 115rpx;
  height: 115rpx;
}

.login-name {
  font-size: 32rpx;
  color: #333333;
  margin-top: 112rpx;
  text-align: center;
}

/* 授权按钮 */
.btn {
  width: 526rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin: 72rpx auto;
  background: linear-gradient(86deg, #43b2fc 3%, #43a0fc 97%);
  color: #ffffff;
}