/* pages/activity/index.wxss */
@import '/common/consult/consult.wxss';
@import '/common/noData/noData.wxss';
.swiper-box {
  width: 100%;
  height: 420rpx;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.video {
  width: 100%;
  height: 100%;
}

swiper {
  height: 100%;
}

.wx-swiper-dot {
  width: 12rpx !important;
  height: 12rpx !important;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 12rpx;
  height: 12rpx;
}

/* 活动列表 */
.activity-wrap {
  width: 100%;
  background-color: #f8f8f8;
}

.activity-list {
  width: 100%;
  padding: 34rpx 30rpx;
}

.activity-item {
  width: 690rpx;
  height: 190rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.activity-item-left {
  width: 260rpx;
  height: 190rpx;
  position: relative;
  margin-right: 18rpx;
  border-radius: 10rpx;
}

.activity-item-left image {
  width: 100%;
  height: 100%;
}

.activity-status-going {
  width: 100rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #3ccbb4;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}

.activity-status-writing {
  width: 100rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #43b2fc;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}

.activity-status-overed {
  width: 100rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #c9c9c9;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}
.activity-status-ready {
  width: 100rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #f52b2b;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #ffffff;
}

.activity-item-right {
  width: 412rpx;
  height: 190rpx;
}

.activity-name {
  width: 390rpx;
  font-size: 30rpx;
  color: #333333;
  margin: 6rpx 0 14rpx 0;
  height: 82rpx;
}

.activity-time-icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 8rpx;
}

.activity-time-icon image {
  width: 100%;
  height: 100%;
}

.activity-time {
  font-size: 24rpx;
  color: #999999;
  line-height: 44rpx;
}

.activity-location-icon {
  width: 20rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.activity-location-icon image {
  width: 100%;
  height: 100%;
}

.activity-location {
  font-size: 24rpx;
  color: #999999;
  line-height: 44rpx;
  width: 380rpx;
}