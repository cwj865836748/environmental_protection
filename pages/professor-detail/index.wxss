/* pages/professor-detail/index.wxss */
.professor-avatar {
  width: 750rpx;
  height: 580rpx;
}

.professor-avatar image {
  width: 100%;
  height: 100%;
}

.professor-introduce {
  width: 100%;
  /* min-height: 474rpx; */
  background: linear-gradient(180deg, #ffffff 16%, rgba(255, 255, 255, 0));
  border-radius: 20px;
  margin-top: -30rpx;
  position: relative;
  padding: 0 30rpx;
  overflow: hidden;
}

.professor-name {
  font-size: 36rpx;
  height: 54rpx;
  color: #333333;
  margin-top: 14rpx;
}

.professor-dec-box {
  width: 672rpx;
  flex-wrap: wrap;
}

.professor-dec {

  font-size: 28rpx;
  line-height: 44rpx;
  opacity: 0.7;
  color: #333333;
  margin-top: 6rpx;
}

.professor-title-list {
  width: 672rpx;
  flex-wrap: wrap;
  margin-top: 22rpx;
}

.professor-title-item {
  /* width: 82rpx; */
  height: 38rpx;
  background: rgba(67, 178, 252, 0.1);
  border: 2rpx solid #43b2fc;
  border-radius: 20px;
  margin-right: 10rpx;
  font-size: 22rpx;
  color: #43b2fc;
  line-height: 36rpx;
  margin-bottom: 10rpx;
  padding: 0 10rpx;
}

/* 人物简介 */
.figure-introduce {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 50rpx;
  height: 50rpx;
}

.figure-line {
  width: 6rpx;
  height: 30rpx;
  background-color: #43b2fc;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.figure-title {
  font-size: 32rpx;
  color: #333333;
}

.figure-detail {
  margin: 0 auto;
  width: 690rpx;
  font-size: 26rpx;
  color: #999999;
  margin-top: 12rpx;
}