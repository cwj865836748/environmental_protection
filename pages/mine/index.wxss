/* pages/mine/index.wxss */

.wrap{
  width: 100%;
  height: 100vh;
  background-color: #f8f8f8;
}
.minHead{
  height: 534rpx;
  width:100%;
  /* background: linear-gradient(315deg,#4b92f2 1%, #2dc1f9 99%); */
  position:relative;
}

.my-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.my-icon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left:50%;
  top: 50%;
  transform:translate(-50%,-50%);
}
.my-icon image{
  width: 100%;
  height: 100%;
}
.my-name{
  position: absolute;
  left:50%;
  bottom: 66px;
  transform:translateX(-50%);
  font-size: 20px;
  color: #ffffff;
  letter-spacing: 1px;
}

