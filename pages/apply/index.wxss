/* pages/apply/index.wxss */
@import '/pages/appointment/index.wxss';

.select-box {
  height: 375rpx;
}

.van-radio:first-child {
  margin-right: 150rpx;

}
.upDownIcon>.upDownImage {
  width: 100%;
}
.upDownIcon>.upDownImage>image {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateX(-50%);
}

.chooseList {
  width: 690rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 30rpx;
  top: 110rpx;
  z-index:50;
  padding: 37rpx 35rpx 38rpx 30rpx;
}
.chooseListOne {
  color: #333333;
  margin-bottom: 52rpx;
}
.chooseListOne:last-child {
  margin-bottom: 0rpx;
}
.chooseList::before {
  content: '';
  border-width: 20rpx 15rpx;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  top: -30rpx;
  left: 40rpx;

}
.chooseListOneActive {
  color: #43b2fc;
}
.chooseListOneActive>image {
  width: 33rpx;
  height: 22rpx;
}