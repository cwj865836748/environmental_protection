/* pages/supply-demand/index.wxss */
/* @import '/pages/authorization/index.wxss'; */
@import '/common/consult/consult.wxss';
@import '/common/noData/noData.wxss';
page{
  background-color: #f8f8f8;
}
.head{
  height: 500rpx;
}
/* 轮播图 */
.swiper-box {
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.swiper-item {
  width: 100%;
  height: 100%;
}
.video{
  width: 100%;
  height: 100%;
}
swiper {
  height: 100%;
}

.wx-swiper-dot {
  width: 12rpx !important;
  height: 12rpx !important;
  margin-bottom: 20rpx;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 12rpx;
  height: 12rpx;
}
/* 头部阴影 */
.head-shadow{
  width: 100%;
  height: 250rpx;
  background: linear-gradient(180deg,#000000,#ffffff);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
  opacity: 0.5;
}

/* 快报内容 */
.news-wrap{
  width: 100%;
  background: #f8f8f8;
  border-radius: 20rpx 20rpx 0 0;
  padding: 0 30rpx;
  min-height: 500rpx;
  margin-top:-20rpx;
  position: relative;
}
.tab-item{
  font-size: 30rpx;
  color: #999999;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.tab-item-active{
  color: #333333;
}
.tab-line-active{
  width: 33rpx;
  height: 4rpx;
  background: #43B2FC;
}

.tab-list{
  padding: 0 120rpx;
  justify-content: space-around;
  /* height: 106rpx; */
  margin-top: 26rpx;
  margin-bottom: 20rpx;
  /* background: linear-gradient(180deg,#ffffff 16%, rgba(255,255,255,0)); */
}

/* 快报内容 */
.news-content{
  width: 100%;
  /* height: 55vh; */
  overflow-y: scroll;
  padding-bottom: 100rpx;
}
.news-list{
  margin-top: 20rpx;
}
.news-item{
  background-color: #ffffff;
}
.item-img{
  width: 260rpx;
  height: 160rpx;
  margin-right: 16rpx;
}
.item-img image{
  width: 100%;
  height: 100%;
}
.news-msg{
  width: 412rpx;
  height: 160rpx;
}
.news-dec{
  width: 392rpx;
  /* height: 78rpx; */
  color: #333333;
  margin: 8rpx 0 26rpx 0;
}
.news-time{
  font-size: 24rpx;
  color: #999999;
}

/* 发布按钮 */
.publish-btn{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn{
  width: 690rpx;
  height: 90rpx;
  background: linear-gradient(90deg,#43b2fc 1%, #43a0fc 99%);
  color: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx auto;
}