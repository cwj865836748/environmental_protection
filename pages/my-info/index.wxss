/* pages/my-info/index.wxss */
@import '/pages/appointment/index.wxss';

.my-msg {
  width: 100%;
  height: 271rpx;
}

.my-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.my-avatar image {
  width: 100%;
  height: 100%;
}

.my-name {
  font-size: 28rpx;
  color: #666666;
  line-height: 28rpx;
  margin-top: 24rpx;
}

.list-cell {
  padding-left: 15rpx;
}

.list-cell-title {
  width: 195rpx;
}

.list-cell-start {
  color: #ee0a24;
  font-size: 28rpx;
  height: 40rpx;
  padding-top: 10rpx;
  margin-right: 2rpx;
}

.get-phone {
  font-size: 30rpx;
  color: #43b2fc;
}

.reset-phone-box {
  width: calc(100% - 200rpx);
  height: 100%;
  justify-content: space-between;
}

.phone {
  color: #333333;
}

.reset-phone {
  color: #43b2fc;
}

/* 弹框 */
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 690rpx;
  height: 464rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.popup-tips{
  width: 100%;
  font-size: 32rpx;
  color: #333333;
  margin-top: 20rpx;
  margin-bottom: 60rpx;
}
.code-box{
  padding-right: 34rpx;
}
.code-input{
  width: 505rpx;
}
.get-code{
  color: #43b2fc;
}
.btn-box{
  width: 100%;
  height: 102rpx;
  border-top: 2rpx solid #efefef;
  margin-top: 40rpx;
}
.cancle{
  font-size: 32rpx;
  color: #666666;
  height: 100%;
  border-right: 2rpx solid #efefef;
}
.sure{
  font-size: 32rpx;
  color: #43b2fc;
  height: 100%;
}