/* pages/produce-library/index.wxss */
/* @import '/pages/index/index.wxss'; */
@import '/pages/search/index.wxss';
@import '/common/noData/noData.wxss';
.van-field__input{
  padding-left:30rpx !important;
}
.search{
  margin-bottom: 20rpx;
  position: relative;
}
.search-icon{
  width: 27rpx;
  height: 27rpx;
  position: absolute;
  top: calc(50% - 13.5rpx);
  left: 22rpx;
}
/* 头部搜索框 */
.head-input {
  width: 690rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: #F6F6F6;
  margin: 0 auto;
}

.input-icon {
  width: 27rpx;
  height: 27rpx;
  margin-left: 26rpx;
  margin-right: 11rpx;
}

.head-input .input-tips {
  color: #BEBEBE;
}

/* tab 标签页 */
/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none
}

.sub-tab-list {
  overflow: scroll;
  height: 90rpx;
  /* padding-left: 30rpx; */
  background: linear-gradient(180deg,#ffffff 16%, rgba(255,255,255,0));
  min-width: 750rpx;
}

.sub-tab-item-name {
  min-width: 160rpx;
  text-align: center;
  color: #999999;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.sub-tab-item-name-active {
  color: #333333 !important;
  font-size: 30rpx;
  font-weight: 500;
}

.sub-tab-item-line {
  width: 33rpx;
  height: 4rpx;
  background-color: #43B2FC;
}

/* 产品列表 */
.produce-list {
  flex-wrap: wrap;
  /* height: 79vh; */
  overflow-y: scroll;
  margin-top: 20rpx;
}

.produce-item {
  /* height: 400rpx; */
  margin-bottom: 44rpx;
}

.produce-item-img-box {
  width: 332rpx;
  height: 332rpx;
  border-radius: 20rpx;
  background-color: #f8f8f8;
}

.produce-item-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.produce-item-dec {
  width: 252rpx;
  font-size: 26rpx;
  color: #666666;
  margin-top: 22rpx;
  text-align: center;
}

.ml {
  margin-left: 28rpx;
}